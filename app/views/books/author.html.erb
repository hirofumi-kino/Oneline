 <% if logged_in? %>
  <div class="row">
    <aside class="col-sm-2">
      
      <div class="card">
      <div class="card-header">
        <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
      </div>
      <div class="card-body">
        <h3 class="card-title text-center"><%= current_user.name %></h3>
      </div>
    </div>
    <div class="mt-2 d-flex justify-content-around">
      <a class="btn btn-outline-primary" href="<%= followings_user_path(@user) %>">Following</a>
      <a class="btn btn-outline-primary" href="<%= followers_user_path(@user) %>">Follower</a>
    </div>
    
    <div class="mt-3">
      <%= form_with(model: @quote, local: true) do |f| %>
       
        <div class="form-group">
          <%= f.label :sentence, 'One line' %>
          <%= f.text_area :sentence, class: 'form-control', rows: 5 %>
        </div>
        
        <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>
        </div>
        
        <div class="form-group">
        <%= f.label :author, 'Author' %>
        <%= f.text_field :author, class: 'form-control' %>
        </div>
        
        <%= f.submit 'Underline', class: 'btn btn-primary btn-block' %>
      <% end %>
      </div>
      </aside>
      <div class="col-sm-10">
      <h2 class="text-center">Author: <%= @author %></h2>
      <%= render 'quotes/quotes', quotes: @quotes %>
      </div>
    </div>
      <% else %>
      <div class="row">
    <aside class="col-sm-3">
      <h4 class = "text-center m-2">あなたの好きな一文を投稿しましょう</h4>
      <div class="d-flex flex-column align-items-center m-2">
      <%= link_to 'Login', login_path, class: 'm-3 btn btn-outline-primary btn-lg' %> 
      <%= link_to 'Sign up', signup_path, class: 'm-3 btn btn-outline-primary btn-lg' %>
      </div>
    </aside>
      
    <div class="col-sm-9">
      <h2 class="text-center">Author: <%= @author %></h2>
      <%= render 'quotes/quotes', quotes: @quotes %>
  
    </div>
  </div>
<% end %>