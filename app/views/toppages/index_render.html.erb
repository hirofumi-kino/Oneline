<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <div class="card">
      <div class="card-header">
        <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
      </div>
      <div class="card-body">
        <h3 class="card-title text-center"><%= current_user.name %></h3>
      </div>
    </div>
    <div class="mt-2 d-flex justify-content-around">
      <a class="btn btn-outline-primary" href="<%= followings_user_path(current_user.id) %>">Following</a>
      <a class="btn btn-outline-primary" href="<%= followers_user_path(current_user.id) %>">Follower</a>
    </div>
    
    <div class="mt-3">
      <%= form_with(model: @quote, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
     
       
        <div class="form-group">
          <%= f.label :sentence, 'One line' %>
          <%= f.text_area :sentence, class: 'form-control', rows: 5 %>
        </div>
        
        <div class="form-group">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, class: 'form-control' %>
        </div>
        
        <div class="form-group">
        <%= f.label :author, 'Author' %>
        <%= f.text_field :author, class: 'form-control' %>
        </div>
        
        <%= f.submit 'Underline', class: 'btn btn-primary btn-block' %>
      <% end %>
      </div>
    </aside>
    <div class="col-sm-8">
      
      <%= render 'quotes/quotes', quotes: @quotes %>
      
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">

      <h1 class="bg-success text-white rounded-pill p-3">One line</h1>

        <div class="d-flex flex-column align-items-center">
          <%= link_to 'Login', login_path, class: 'm-3 btn btn-primary btn-lg' %>
          <%= link_to 'Sign up', signup_path, class: 'm-3 btn btn-primary btn-lg' %>
        </div>
    </div>
  </div>
<% end %>